<body>

<header>
  <h1>üìù Markdown Blog Editor</h1>
</header>

<section class="container">
  <!-- Markdown Editor -->
  <div class="editor">
    <h3>Write Post</h3>
    <input type="text" id="title" placeholder="Post Title" style="width:100%" />
    <textarea id="markdown" placeholder="Write your post using Markdown..."></textarea>
    <button onclick="savePost()">Save Post</button>
  </div>

  <!-- Preview -->
  <div class="preview">
    <h3>Live Preview</h3>
    <div id="preview-content"></div>
  </div>
</section>

<!-- Saved Posts -->
<section class="posts">
  <h2 style="text-align:center">üìö Saved Blog Posts</h2>
  <div id="postList"></div>
</section>

<script>
  const markdownInput = document.getElementById('markdown');
  const previewContent = document.getElementById('preview-content');
  const postList = document.getElementById('postList');

  markdownInput.addEventListener('input', () => {
    previewContent.innerHTML = marked.parse(markdownInput.value);
  });

  function savePost() {
    const title = document.getElementById('title').value.trim();
    const content = markdownInput.value.trim();

    if (!title || !content) {
      alert("Please enter both title and content.");
      return;
    }

    const posts = JSON.parse(localStorage.getItem('blogPosts')) || [];
    posts.push({ title, content, date: new Date().toLocaleString() });
    localStorage.setItem('blogPosts', JSON.stringify(posts));
    document.getElementById('title').value = '';
    markdownInput.value = '';
    previewContent.innerHTML = '';
    loadPosts();
  }

  function loadPosts() {
    const posts = JSON.parse(localStorage.getItem('blogPosts')) || [];
    postList.innerHTML = '';
    posts.reverse().forEach((post, index) => {
      const div = document.createElement('div');
      div.className = 'post';
      div.innerHTML = `
        <h3>${post.title}</h3>
        <small><i>${post.date}</i></small>
        <div>${marked.parse(post.content)}</div>
        <button style="background:#dc3545" onclick="deletePost(${posts.length - 1 - index})">Delete</button>
      `;
      postList.appendChild(div);
    });
  }

  function deletePost(index) {
    const posts = JSON.parse(localStorage.getItem('blogPosts')) || [];
    posts.splice(index, 1);
    localStorage.setItem('blogPosts', JSON.stringify(posts));
    loadPosts();
  }

  // Load posts on page load
  loadPosts();
</script>

</body>
</html>
